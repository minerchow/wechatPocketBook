.containers{
    margin: 0;
    padding: 0;
    width: 750rpx;
}
.section-ctn image{
   width: 100%;
   height: 900rpx;
}
.step-title{
    margin-top: 20px;
    margin-left: 10px;
    position: relative;
}
.title-1{
   font-family: "宋体";
   font-size: 50px;
}
.title-2{
   font-family: "微软雅黑";
   font-size: 14px;
   position: absolute;
   left: 50px;
   top: 10px;
}
.title-3{
    color: #989898;
}

.scroll{
    width: 750rpx;
    overflow: hidden;
    overflow-x: scroll;
}
.wrap-scroll{
    width: 1080rpx;
}
.step-link{
    width: 340rpx;
    height: 80px;
    margin-left: 10px;
    margin-top: 10px;
    position: relative;
    float: left;
}
.step-link image{
    width: 100%;
    height: 80px;
    border-radius: 4px;
}
.img-text{
    font-family: "微软雅黑";
    font-size: 16px;
    color: #fff;
    width: 340rpx;
    text-align: center;
    position: absolute;
    left: 0;
    top: 20px;
    line-height: 40px;
}