.containers{
    margin: 0;
    padding: 0;
    width: 750rpx;
}
.wrapper{
    margin-bottom: 40rpx;
}
.section-ctn image{
   width: 100%;
   display: block;
   margin-bottom: 40rpx;
}
.step-title{
    margin-left: 20rpx;
    position: relative;
}
.title-1{
   font-family: "宋体";
   font-size: 100rpx;
}
.title-2{
   font-family: "微软雅黑";
   font-size: 28rpx;
   position: absolute;
   left: 100rpx;
   top: 20rpx;
}
.title-3{
    color: #989898;
    font-size: 28rpx;
}

.scroll{
    width: 750rpx;
    overflow: hidden;
    overflow-x: scroll;
}
.wrap-scroll{
    width: 2000rpx;
}
.step-link{
    width: 340rpx;
    height:160rpx;
    margin-left: 20rpx;
    margin-top: 20rpx;
    position: relative;
    float: left;
}
.step-link image{
    width: 100%;
    border-radius: 8rpx;
}
.img-text{
    font-family: "微软雅黑";
    font-size: 32rpx;
    color: #fff;
    width: 340rpx;
    text-align: center;
    position: absolute;
    left: 0;
    top: 40rpx;
    line-height: 80rpx;
}
.last-fill{
    width: 20rpx;
    height: 160rpx;
    display: inline-block;
}